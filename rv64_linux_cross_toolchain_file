set (WITH_LOAD_FW		ON	CACHE STRING "")
set (WITH_RV64			ON	CACHE STRING "")
set (WITH_STATIC_LIB		OFF	CACHE STRING "")
set (LIBMETAL_LIB_DIR		../libmetal/build/lib			CACHE STRING "")
set (LIBMETAL_LIB		../libmetal/build/lib/libmetal.so	CACHE STRING "")
set (LIBMETAL_INCLUDE_DIR	../libmetal/build/lib/include		CACHE STRING "")

set (WITH_WFI			ON	CACHE STRING "")
set (RPMSG_NO_IPI		ON	CACHE STRING "")
